{
  "name": "Djenitor",
  "description": "Djenitor Electron App",
  "author": "Serban Mihai-Ciprian <mihai.ciprian.serban@gmail.com>",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "src/electron-starter.js",
  "dependencies": {
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.55",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "notistack": "^0.9.16",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "serialport": "^9.0.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "dist:linux": "electron-builder --linux",
    "dist:windows": "electron-builder --windows",
    "dist:mac": "electron-builder --mac",
    "dist:all": "electron-builder -mwl",
    "dist:pack": "electron-builder --dir"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serban-mihai/Djenitor"
  },
  "bugs": {
    "url": "https://github.com/serban-mihai/Djenitor/issues"
  },
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^22.7.0",
    "foreman": "^3.0.1"
  },
  "build": {
    "productName": "Djenitor",
    "appId": "com.djenitor.client",
    "extends": null,
    "asar": false,
    "files": [
      "src/**/*",
      "public/*",
      "Procfile",
      "node_modules/**/*",
      "package.json",
      "yarn.lock"
    ],
    "linux": {
      "icon": "public/logo512.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
